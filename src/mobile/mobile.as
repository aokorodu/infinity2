package mobile {	import mobile.model.*;	import mobile.view.*;	import mobile.controller.*;	import flash.display.MovieClip;	import flash.display.StageScaleMode;	import flash.display.StageAlign;	public class mobile extends MovieClip{		private var mobile_model:mobileModel;		private var mobile_view:mobileView;		private var mobile_controller:mobileController;		public function mobile() {		/*	trace("App: App()");*/			// create the data model			mobile_model = new mobileModel();			// create the controller			mobile_controller = new mobileController(mobile_model);			// create the view for Mouse Interaction			mobile_view = new mobileView(mobile_model, mobile_controller, this);						// add mobile_view as a listener to the mobile_model			mobile_model.addEventListener(mobileModel.UPDATE_UI, mobile_view.updateUI);						// set defaults		}				public function get model():mobileModel{			return mobile_model		}	}}