oller, entity);						button.x =	btn_xpos						btn_xpos = btn_xpos+button.width+30						button.name = entity.parentTitle						rowMap[cat].addChild(button);						_entitymap[button] = entity;						_controlMap[rowMap[cat]].push(button);					}				}				destination.x = xpos/clip.width/2 +35				_movies.x = xpos/clip.width/2 +35				_movies.y = ypos		}		public function get controlMap():Dictionary{			return _controlMap;		}		public function get entitymap():Dictionary{			return _entitymap		}	}};