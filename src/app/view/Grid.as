ray]; _current.visible = true;				}else{					var browse = new Browse(model, controller);addChild(browse);					_viewMemory[catArray] = browse; _current = _viewMemory[catArray];					}			}					}						// get public acess to clips'		public function get current():MovieClip{			return _current;		}		public function get catalog():Object{			return _catalog;		}		public function get single():Object{			return _single;		}		// get view state 		public function get viewState():Boolean{			return _viewState;		}	}};