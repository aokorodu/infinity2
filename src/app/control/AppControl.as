package app.control{	import app.*;	import app.model.*;	import app.view.*;	import app.control.*;	import fl.controls.Button;	import flash.display.MovieClip;	import flash.events.Event	import flash.events.MouseEvent;	import flash.events.GestureEvent;	import flash.events.PressAndTapGestureEvent;	import flash.events.TouchEvent;	import flash.ui.Multitouch;	import flash.ui.MultitouchInputMode;		public class AppControl extends MovieClip{		private var model:AppModel;		private var _viewIndex:int;		private var _views:Array;		private var _ui:MovieClip;		private var _content:MovieClip;		Multitouch.inputMode = MultitouchInputMode.TOUCH_POINT;		public function AppControl(model:AppModel) {			this.model = model;			this._views = new Array();			this._content = new MovieClip();						// fake user request for 'downloads' would be object listening for user input 			_ui = new MovieClip(); addChild(_ui);			var _shows= new ButtonTv(); _ui.addChild(_shows);			var _movies= new ButtonMovies(); _ui.addChild(_movies);			_movies.x = _shows.x+ _shows.width+20; _ui.x = 1024/2-_ui.width/2;_ui.y = 768/2;						_shows.addEventListener(MouseEvent.MOUSE_DOWN, onTv);			_movies.addEventListener(MouseEvent.MOUSE_DOWN, onMovies);			}				public function addView(view:AppView):void{			_views.push(view);			if(_views.length == 1){_content.addChild(view); _viewIndex = 0; }					}		// add touch, mouse, and keyboard controls 		private function onTv(e:MouseEvent):void{					var _tvArr = [ "'Mad Men'","'The Walking Dead'", "'Big Love'", "'True Blood'"];		var _tvSql:String = "SELECT  tv.p, episodes.parentTitle, episodes.entityType, episodes.title, episodes.description FROM tv, episodes WHERE tv.parentid = episodes.parentid and tv.title IN ("+_tvArr+");"		this.model.dbQuery = _tvSql;		}					private function onMovies(e:MouseEvent):void{					var _movieArr = [ "'The Hangover'",  "'Despicable Me'", "'Pirates Of The Caribbean'", "'Toy Story 3'"];		var _movieSql:String = "SELECT movies.title, movies.p, movies.entityType, movies.description, movies.parentTitle FROM movies WHERE movies.title IN ("+_movieArr+");"		this.model.dbQuery = _movieSql;		}			public function update(e:Event):void {		trace("Update UI")		}			}}